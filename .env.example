Set-Content .env.example @"
# --- Security Configuration ---
# Generate these using a password manager or 'openssl rand -hex 32'
JWT_SECRET_KEY=changeme_long_random_string
ENCRYPTION_SECRET=changeme_another_random_string

# --- Database Configuration ---
# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://<db_user>:<db_password>@cluster0.example.mongodb.net/?appName=Cluster0
DB_NAME=printos_dashboard

# --- E-Mail Service (SMTP) ---
# Optional: Needed for "Forgot Password" functionality
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your.email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your.email@gmail.com

# --- Frontend URL ---
# Used for CORS and Redirects
FRONTEND_URL=http://localhost:3000
"@